{
    "parser": "@typescript-eslint/parser",  // TypeScript ESLint 파서를 사용하도록 설정
    "extends": [
      "eslint:recommended",                  // ESLint의 추천 규칙을 사용
      "plugin:@typescript-eslint/recommended" // @typescript-eslint의 추천 규칙을 사용
    ],
    "parserOptions": {
      "ecmaVersion": 2020,                   // 최신 ECMAScript 기능 사용
      "sourceType": "module"                 // ES 모듈을 사용
    },
    "rules": {
      // 프로젝트에 맞게 추가적인 규칙을 여기에 추가할 수 있습니다.
      "@typescript-eslint/no-unused-vars": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    }
  }
  